<UserControl x:Class="TheMetz.Partials.IndividualStats"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:theMetz="clr-namespace:TheMetz"
             xmlns:models="clr-namespace:TheMetz.Models"
             mc:Ignorable="d"
             d:DesignHeight="1360" d:DesignWidth="2040">
    <UserControl.Resources>
        <!-- Modern Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#20000000" BlurRadius="16" ShadowDepth="4" Direction="270" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#106EBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#E1E1E1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#1F1F1F"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Subsection Header Style -->
        <Style x:Key="SubsectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#424242"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Modern RichTextBox Style -->
        <Style x:Key="ModernRichTextBoxStyle" TargetType="RichTextBox">
            <Setter Property="BorderBrush" Value="#E1E1E1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="MaxHeight" Value="220"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="32" MaxWidth="1920">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Header Section with Gradient Background -->
            <Border Grid.Row="0"
                    CornerRadius="12"
                    Margin="0,0,0,24"
                    Padding="28,24">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#0078D4" Offset="0"/>
                        <GradientStop Color="#00BCF2" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Individual Statistics"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,20"/>

                    <!-- Controls Row with Responsive Wrapping -->
                    <WrapPanel Grid.Row="1" Orientation="Horizontal">
                        <StackPanel Orientation="Horizontal" Margin="0,0,20,8">
                            <TextBlock Text="Team Member"
                                       VerticalAlignment="Center"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       Margin="0,0,12,0"/>
                            <ComboBox Name="TeamMemberComboBox"
                                      MinWidth="280"
                                      Height="40"
                                      Style="{StaticResource ModernComboBoxStyle}"
                                      ItemsSource="{Binding (models:IndividualStatsViewModel.TeamMembers)}"
                                      SelectionChanged="TeamMemberComboBox_SelectionChanged" />
                        </StackPanel>

                        <theMetz:DaysControl x:Name="IndividualStatsDaysControl"
                                            Margin="0,0,20,8"
                                            VerticalAlignment="Center"/>

                        <Button Name="RefreshButton"
                                Content="↻ Refresh"
                                Height="40"
                                MinWidth="120"
                                FontSize="14"
                                Margin="0,0,20,8"
                                Style="{StaticResource ModernButtonStyle}"
                                Visibility="Collapsed"
                                Click="RefreshButton_Click" />

                        <Border Name="LoadingLabel"
                                Background="#FFF4F4"
                                CornerRadius="8"
                                Padding="16,8"
                                Margin="0,0,0,8"
                                VerticalAlignment="Center"
                                Visibility="Collapsed">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⟳"
                                           FontSize="16"
                                           Foreground="#E74856"
                                           Margin="0,0,8,0"
                                           VerticalAlignment="Center">
                                    <TextBlock.RenderTransform>
                                        <RotateTransform x:Name="LoadingRotation" CenterX="8" CenterY="8"/>
                                    </TextBlock.RenderTransform>
                                    <TextBlock.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard RepeatBehavior="Forever">
                                                    <DoubleAnimation Storyboard.TargetName="LoadingRotation"
                                                                   Storyboard.TargetProperty="Angle"
                                                                   From="0" To="360" Duration="0:0:1"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </TextBlock.Triggers>
                                </TextBlock>
                                <TextBlock Text="Loading..."
                                           FontSize="15"
                                           FontWeight="SemiBold"
                                           Foreground="#E74856"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </WrapPanel>
                </Grid>
            </Border>

            <!-- PR Review Stats Section -->
            <Border Grid.Row="1"
                    Style="{StaticResource CardStyle}"
                    Margin="0,0,0,24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="📊 PR Review Stats"
                               Style="{StaticResource SectionHeaderStyle}"/>

                    <TextBlock Grid.Row="1"
                               Text="Reviews and Comments"
                               Style="{StaticResource SubsectionHeaderStyle}"/>

                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0"
                                Background="#F0EBFF"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,0,16">
                            <TextBlock Name="CommentStatsText"
                                       TextWrapping="Wrap"
                                       FontSize="14"
                                       Foreground="#1F1F1F"
                                       LineHeight="22"/>
                        </Border>

                        <RichTextBox Grid.Row="1"
                                     Name="PrReviewDetails"
                                     Style="{StaticResource ModernRichTextBoxStyle}">
                            <FlowDocument>
                                <Paragraph></Paragraph>
                            </FlowDocument>
                        </RichTextBox>
                    </Grid>
                </Grid>
            </Border>

            <!-- Responsive Grid for Work Items and PR Stats -->
            <Grid Grid.Row="2" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="300"/>
                    <ColumnDefinition Width="*" MinWidth="300"/>
                </Grid.ColumnDefinitions>

                <!-- Work Item Stats Section -->
                <Border Grid.Column="0"
                        Style="{StaticResource CardStyle}"
                        Margin="0,0,12,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0"
                                Background="#E8F2FA"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,0,12">
                            <TextBlock Text="✓ Work Item Stats"
                                       Style="{StaticResource SectionHeaderStyle}"
                                       Margin="0"/>
                        </Border>

                        <RichTextBox Grid.Row="1"
                                     Name="WorkItemDetails"
                                     Style="{StaticResource ModernRichTextBoxStyle}">
                            <FlowDocument>
                                <Paragraph></Paragraph>
                            </FlowDocument>
                        </RichTextBox>
                    </Grid>
                </Border>

                <!-- Pull Request Stats Section -->
                <Border Grid.Column="1"
                        Style="{StaticResource CardStyle}"
                        Margin="12,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="🔀 Pull Request Activity"
                                   Style="{StaticResource SectionHeaderStyle}"/>

                        <!-- PRs Opened -->
                        <Border Grid.Row="1"
                                Background="#E8F7EE"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="PRs Opened"
                                           Style="{StaticResource SubsectionHeaderStyle}"
                                           Foreground="#3CB371"/>
                                <RichTextBox Name="PrOpenedDetails"
                                             Style="{StaticResource ModernRichTextBoxStyle}"
                                             Background="White">
                                    <FlowDocument>
                                        <Paragraph></Paragraph>
                                    </FlowDocument>
                                </RichTextBox>
                            </StackPanel>
                        </Border>

                        <!-- PRs Closed -->
                        <Border Grid.Row="2"
                                Background="#FFF3E6"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="PRs Closed"
                                           Style="{StaticResource SubsectionHeaderStyle}"
                                           Foreground="#FF8C00"/>
                                <RichTextBox Name="PrClosedDetails"
                                             Style="{StaticResource ModernRichTextBoxStyle}"
                                             Background="White">
                                    <FlowDocument>
                                        <Paragraph></Paragraph>
                                    </FlowDocument>
                                </RichTextBox>
                            </StackPanel>
                        </Border>

                        <!-- PRs Reviewed -->
                        <Border Grid.Row="3"
                                Background="#FCEAED"
                                CornerRadius="8"
                                Padding="16">
                            <StackPanel>
                                <TextBlock Text="PRs Reviewed"
                                           Style="{StaticResource SubsectionHeaderStyle}"
                                           Foreground="#DC143C"/>
                                <RichTextBox Name="PrReviewedDetails"
                                             Style="{StaticResource ModernRichTextBoxStyle}"
                                             Background="White">
                                    <FlowDocument>
                                        <Paragraph></Paragraph>
                                    </FlowDocument>
                                </RichTextBox>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- Chart Section -->
            <Border Grid.Row="3"
                    Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="📈 Activity Summary"
                               Style="{StaticResource SectionHeaderStyle}"/>

                    <Border Grid.Row="1"
                            BorderBrush="#E1E1E1"
                            BorderThickness="1"
                            CornerRadius="8"
                            Background="White">
                        <Canvas Name="StatsChart"
                                Height="400"
                                SizeChanged="StatsChart_SizeChanged" />
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
