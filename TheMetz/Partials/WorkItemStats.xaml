<UserControl x:Class="TheMetz.Partials.WorkItemStats"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TheMetz.Partials"
             xmlns:theMetz="clr-namespace:TheMetz"
             xmlns:models="clr-namespace:TheMetz.Models"
             mc:Ignorable="d"
             d:DesignHeight="1360" d:DesignWidth="2040">
    <Grid Margin="34">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0"
               HorizontalAlignment="Left"
               Margin="0,0,0,8"
               FontSize="15"
               FontWeight="Bold"
               VerticalAlignment="Top">
            Work Item Activity
        </Label>

        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,17">
            <Button Name="FetchWorkItemData" Content="Fetch Data"
                    Width="128" Height="31" FontSize="14"
                    Click="FetchWorkItemButtonClicked" />
            <theMetz:DaysControl x:Name="WorkItemStatsDaysControl" Margin="17,0,0,0" />
        </StackPanel>

        <ListBox Grid.Row="2" Grid.Column="0"
                 Name="WorkItemResultsList"
                 ItemsSource="{Binding (models:WorkItemStatsViewModel.WorkItemResults)}"
                 Width="340"
                 Margin="0,0,34,0"
                 FontSize="12"
                 SelectionChanged="WorkItemResultsList_SelectionChanged" />

        <GroupBox Grid.Row="0" Grid.Column="1" Grid.RowSpan="3"
                  Header="Work Items for Selected Dev"
                  Padding="17"
                  FontSize="15">
            <RichTextBox Name="WorkItemResults"
                         FontSize="12"
                         VerticalScrollBarVisibility="Auto">
                <FlowDocument>
                    <Paragraph>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
        </GroupBox>

        <Label Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
               Name="WorkItemChartLabel"
               HorizontalAlignment="Left"
               Margin="0,17,0,8"
               FontSize="15"
               FontWeight="Bold"
               Visibility="Collapsed">
            Work Items by Developer
        </Label>

        <Canvas Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                Name="WorkItemChart"
                Background="White"
                MinHeight="340"
                Visibility="Collapsed"
                SizeChanged="WorkItemChart_SizeChanged" />
    </Grid>
</UserControl>
