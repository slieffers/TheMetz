<UserControl x:Class="TheMetz.Partials.WorkItemStats"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TheMetz.Partials"
             xmlns:theMetz="clr-namespace:TheMetz"
             xmlns:models="clr-namespace:TheMetz.Models"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">
    <Grid>
        <Label HorizontalAlignment="Left"
               Margin="33,5,0,0"
               VerticalAlignment="Top">
            Work Item Activity
        </Label>
        <ListBox Name="WorkItemResultsList"
                 ItemsSource="{Binding (models:WorkItemStatsViewModel.WorkItemResults)}"
                 HorizontalAlignment="Left"
                 Margin="33,32,0,0"
                 VerticalAlignment="Top"
                 Width="229"
                 Height="206"
                 SelectionChanged="WorkItemResultsList_SelectionChanged" />
        <Button Name="FetchWorkItemData" Content="Fetch Data" HorizontalAlignment="Left"
                Margin="289,32,50,0" VerticalAlignment="Top" Width="75" Click="FetchWorkItemButtonClicked" />
        <Label Margin="444,5,0,0">Work Items for Selected Dev</Label>
        <RichTextBox Name="WorkItemResults"
                     VerticalAlignment="Top"
                     Margin="444,36,40,0" Height="202">
            <FlowDocument>
                <Paragraph>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <theMetz:DaysControl x:Name="WorkItemStatsDaysControl" Margin="282,69,0,0" />

        <Label Name="WorkItemChartLabel" HorizontalAlignment="Left" Margin="33,250,0,0" VerticalAlignment="Top" Visibility="Collapsed">Work Items by Developer</Label>
        <Canvas Name="WorkItemChart" Margin="33,280,40,40" Background="White" Visibility="Collapsed" SizeChanged="WorkItemChart_SizeChanged" />
    </Grid>
</UserControl>
