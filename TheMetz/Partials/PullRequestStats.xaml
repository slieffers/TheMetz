<UserControl x:Class="TheMetz.Partials.PullRequestStats"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:theMetz="clr-namespace:TheMetz"
             xmlns:models="clr-namespace:TheMetz.Models"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" HorizontalAlignment="Left"
               Margin="33,5,0,0"
               VerticalAlignment="Top">
            PRs Opened
        </Label>
        <ListBox Grid.Row="0" Name="PrOpenedResultsList"
                 ItemsSource="{Binding (models:PullRequestStatsViewModel.PrOpenedResults)}"
                 HorizontalAlignment="Left"
                 Margin="33,32,0,0"
                 VerticalAlignment="Top"
                 Width="229"
                 Height="206"
                 SelectionChanged="PrOpenedResultsList_SelectionChanged" />
        <Button Grid.Row="0" Name="FetchPrOpenedData" Content="Fetch Data" HorizontalAlignment="Left"
                Margin="289,32,10,0" VerticalAlignment="Top" Width="75" Click="FetchOpenedPrsButtonClicked" />
        <Label Grid.Row="0" Margin="444,5,0,0">PRs Opened for Selected Dev</Label>
        <RichTextBox Grid.Row="0" Name="PrOpenedResults" Margin="444,32,0,0" Height="206" Width="500"
                     VerticalAlignment="Top" HorizontalAlignment="Left">
            <FlowDocument>
                <Paragraph>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <theMetz:DaysControl x:Name="PrsOpenedDaysControl" Grid.Row="0" Margin="282,69,0,0" />

        <Label Grid.Row="1" HorizontalAlignment="Left"
               Margin="33,5,0,0"
               VerticalAlignment="Top">
            PRs Closed
        </Label>
        <ListBox Grid.Row="1" Name="PrClosedResultsList"
                 ItemsSource="{Binding (models:PullRequestStatsViewModel.PrClosedResults)}"
                 HorizontalAlignment="Left"
                 Margin="33,32,0,0"
                 VerticalAlignment="Top"
                 Width="229"
                 Height="206"
                 SelectionChanged="PrClosedResultsList_SelectionChanged" />
        <Button Grid.Row="1" Name="FetchPrClosedData" Content="Fetch Data" HorizontalAlignment="Left"
                Margin="289,32,10,0" VerticalAlignment="Top" Width="75" Click="FetchClosedPrsButtonClicked" />
        <Label Grid.Row="1" Margin="444,5,0,0">PRs Closed for Selected Dev</Label>
        <RichTextBox Grid.Row="1" Name="PrClosedResults" Margin="444,32,0,0" Height="206" Width="500"
                     VerticalAlignment="Top" HorizontalAlignment="Left">
            <FlowDocument>
                <Paragraph>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <theMetz:DaysControl x:Name="PrsClosedDaysControl" Grid.Row="1" Margin="282,69,0,0" />

        <Label Grid.Row="2" HorizontalAlignment="Left"
               Margin="33,5,0,0"
               VerticalAlignment="Top">
            PRs Reviewed
        </Label>
        <ListBox Grid.Row="2" Name="PrReviewedResultsList"
                 ItemsSource="{Binding (models:PullRequestStatsViewModel.PrReviewedResults)}"
                 HorizontalAlignment="Left"
                 Margin="33,32,0,0"
                 VerticalAlignment="Top"
                 Width="229"
                 Height="206"
                 SelectionChanged="PrReviewedResultsList_SelectionChanged" />
        <Button Grid.Row="2" Name="FetchPrReviewedData" Content="Fetch Data" HorizontalAlignment="Left"
                Margin="289,32,10,0" VerticalAlignment="Top" Width="75" Click="FetchReviewedPrsButtonClicked" />
        <Label Grid.Row="2" Margin="444,5,0,0">PRs Reviewed for Selected Dev</Label>
        <RichTextBox Grid.Row="2" Name="PrReviewedResults" Margin="444,32,0,0" Height="206" Width="500"
                     VerticalAlignment="Top" HorizontalAlignment="Left">
            <FlowDocument>
                <Paragraph>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <theMetz:DaysControl x:Name="PrsReviewedDaysControl" Grid.Row="2" Margin="282,69,0,0" />
    </Grid>
</UserControl>
