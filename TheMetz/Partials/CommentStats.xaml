<UserControl x:Class="TheMetz.Partials.CommentStats"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TheMetz.Partials"
             xmlns:theMetz="clr-namespace:TheMetz"
             xmlns:models="clr-namespace:TheMetz.Models"
             mc:Ignorable="d"
             d:DesignHeight="1360" d:DesignWidth="2040">
    <Grid Margin="34">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0"
               HorizontalAlignment="Left"
               Margin="0,0,0,8"
               FontSize="15"
               FontWeight="Bold"
               VerticalAlignment="Top">
            PRs Reviewed
        </Label>

        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,17">
            <Button Name="FetchPrReviewData" Content="Fetch Data"
                    Width="128" Height="31" FontSize="14"
                    Click="FetchPrCommentButtonClicked" />
            <theMetz:DaysControl x:Name="CommentStatsDaysControl" Margin="17,0,0,0" />
        </StackPanel>

        <ListBox Grid.Row="2" Grid.Column="0"
                 Name="PrReviewResultsList"
                 ItemsSource="{Binding (models:CommentStatsViewModel.PrReviewResults)}"
                 Width="340"
                 Margin="0,0,34,0"
                 FontSize="12"
                 SelectionChanged="PrCommentResultsList_SelectionChanged" />

        <GroupBox Grid.Row="0" Grid.Column="1" Grid.RowSpan="3"
                  Header="PRs with Comments for Selected Dev"
                  Padding="17"
                  FontSize="15">
            <RichTextBox Name="PrReviewResults"
                         FontSize="12"
                         VerticalScrollBarVisibility="Auto">
                <FlowDocument>
                    <Paragraph>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
        </GroupBox>
    </Grid>
</UserControl>
