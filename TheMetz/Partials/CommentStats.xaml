<UserControl x:Class="TheMetz.Partials.CommentStats"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TheMetz.Partials"
             xmlns:theMetz="clr-namespace:TheMetz"
             xmlns:models="clr-namespace:TheMetz.Models"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">
    <Grid>
        <Label HorizontalAlignment="Left"
               Margin="33,5,0,0"
               VerticalAlignment="Top">
            PRs Reviewed
        </Label>
        <ListBox Name="PrReviewResultsList"
                 ItemsSource="{Binding (models:CommentStatsViewModel.PrReviewResults)}"
                 HorizontalAlignment="Left"
                 Margin="33,32,0,0"
                 VerticalAlignment="Top"
                 Width="229"
                 Height="206"
                 SelectionChanged="PrCommentResultsList_SelectionChanged" />
        <Button Name="FetchPrReviewData" Content="Fetch Data" HorizontalAlignment="Left"
                Margin="289,32,0,0" VerticalAlignment="Top" Width="75" Click="FetchPrCommentButtonClicked" />
        <Label Margin="444,5,0,0">PRs with Comments for Selected Dev</Label>
        <RichTextBox Name="PrReviewResults" 
                     Margin="444,36,40,350">
            <FlowDocument>
                <Paragraph>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
<theMetz:DaysControl x:Name="CommentStatsDaysControl" Margin="282,69,0,0" />
    </Grid>
</UserControl>
