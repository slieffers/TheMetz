<Window x:Class="TheMetz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheMetz"
        mc:Ignorable="d"
        Title="The Metz" Height="800" Width="1200">
    <Grid>
        <TabControl VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="10" TabStripPlacement="Bottom">
            <TabItem Header="PR Reviews">
                <Grid>
                    <Label HorizontalAlignment="Left" 
                           Margin="33,5,0,0" 
                           VerticalAlignment="Top">PRs Reviewed</Label>
                    <ListBox Name="PrReviewResultsList" 
                             HorizontalAlignment="Left" 
                             Margin="33,32,0,0" 
                             VerticalAlignment="Top" 
                             Width="229" 
                             Height="206" 
                             SelectionChanged="PrCommentResultsList_SelectionChanged" />
                    <Button Name ="FetchPrReviewData"  Content="Fetch Data" HorizontalAlignment="Left" Margin="289,32,0,0" VerticalAlignment="Top" Width="75" Click="FetchPrCommentButtonClicked"/>
                    <Label Margin="387,5,0,0">PRs with Comments for Selected Dev</Label>
                    <RichTextBox Name="PrReviewResults" Margin="444,32,0,0">
                        <FlowDocument>
                            <Paragraph>
                            </Paragraph>
                        </FlowDocument>
                    </RichTextBox>
                    <local:DaysControl Margin="282,69,0,0" />
                </Grid>
            </TabItem>
            <TabItem Header="PR Stats" Height="22" Margin="-2,0,-2,-2" VerticalAlignment="Bottom">
                <Grid>
                    <Label HorizontalAlignment="Left" 
                           Margin="33,5,0,0" 
                           VerticalAlignment="Top">PRs Opened</Label>
                    <ListBox Name="PrOpenedResultsList" 
                             HorizontalAlignment="Left" 
                             Margin="33,32,0,0" 
                             VerticalAlignment="Top" 
                             Width="229" 
                             Height="206" 
                             SelectionChanged="PrOpenedResultsList_SelectionChanged" />
                    <Button Name ="FetchPrStatsData"  Content="Fetch Data" HorizontalAlignment="Left" Margin="289,32,0,0" VerticalAlignment="Top" Width="75" Click="FetchOpenedPrsButtonClicked"/>
                    <Label Margin="387,5,0,0">PRs Opened for Selected Dev</Label>
                    <RichTextBox Name="PrStatsResults" Margin="387,32,0,0">
                        <FlowDocument>
                            <Paragraph>
                            </Paragraph>
                        </FlowDocument>
                    </RichTextBox>
                    <local:DaysControl Margin="282,69,0,0" />
                </Grid>
            </TabItem>
            <TabItem Header="Tab 3">
                <Grid>
                    <local:DaysControl Margin="282,69,0,0" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
