<Window x:Class="TheMetz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheMetz"
        xmlns:partials="clr-namespace:TheMetz.Partials"
        mc:Ignorable="d"
        Title="The Metz" Height="1360" Width="2040">
    <Grid>
        <TabControl VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0" TabStripPlacement="Bottom">
            <TabItem Header="PR Reviews">
                <Grid>
                    <Button Name="UpdatePullRequests" Content="Update Pull Requests" HorizontalAlignment="Left"
                            Margin="289,5,0,0" VerticalAlignment="Top" Width="125"
                            Click="UpdatePullRequestsButtonClicked" />
                    <Label Name="LoadingLabel" HorizontalAlignment="Left"
                           Margin="140,1,0,0"
                           Background="White"
                           VerticalAlignment="Top">
                    </Label>
                    <partials:CommentStats x:Name="CommentStatsControl"/>
                </Grid>
            </TabItem>
            <TabItem Header="PR Stats" Height="22" Margin="-2,0,-2,-2" VerticalAlignment="Bottom">
                <Grid>
                    <partials:PullRequestStats x:Name="PullRequestStatsControl"/>
                </Grid>
            </TabItem>
            <TabItem Header="Work Item Stats">
                <Grid>
                    <partials:WorkItemStats x:Name="WorkItemStatsControl"/>
                </Grid>
            </TabItem>
            <TabItem Header="Individual Stats">
                <Grid>
                    <partials:IndividualStats x:Name="IndividualStatsControl"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>